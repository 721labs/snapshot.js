{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Profile",
  "definitions": {
    "Profile": {
      "title": "Profile",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "name",
          "minLength": 1,
          "maxLength": 32
        },
        "about": {
          "type": "string",
          "title": "about",
          "maxLength": 160
        },
        "avatar": {
          "type": "string",
          "title": "avatar",
          "format": "uri",
          "maxLength": 256
        },
        "twitter": {
          "type": "string",
          "title": "twitter",
          "pattern": "^[A-Za-z0-9_]*$",
          "maxLength": 15
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
